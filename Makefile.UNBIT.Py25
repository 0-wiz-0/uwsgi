CC=gcc

PYTHON_CFLAGS=`python2.5-config --cflags`
PYTHON_LIBS=`python2.5-config --libs`

CFLAGS=$(PYTHON_CFLAGS) -DUNBIT
LD_FLAGS=$(PYTHON_LIBS) -DUNBIT

PROGRAM=/usr/share/unbit/uwsgi

all:	clean uwsgi

uwsgi:	main.o
	$(CC) $(LD_FLAGS) main.o -o $(PROGRAM)

main.o:	uwsgi.c
	$(CC) -c $(CFLAGS) -o main.o uwsgi.c
	
clean:
	rm -f main.o
