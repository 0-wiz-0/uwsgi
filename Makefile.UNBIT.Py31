CC=gcc

PYBASE=/opt/packages/python/31

PATH := ${PATH}:$(PYBASE)/bin

LD_LIBRARY_PATH= $(PYBASE)/lib
export LD_LIBRARY_PATH

PYTHON_CFLAGS=`python3.1-config --cflags`
PYTHON_LIBS=`python3.1-config --libs`

CFLAGS=$(PYTHON_CFLAGS) -DUNBIT -D_GNU_SOURCE -DPYTHREE
LD_FLAGS=$(PYTHON_LIBS) -DUNBIT -D_GNU_SOURCE -DPYTHREE -L $(LD_LIBRARY_PATH)

PROGRAM=/usr/share/unbit/uwsgi31

all:    clean uwsgi

uwsgi:  utils.o main.o
	$(CC) $(LD_FLAGS) main.o utils.o -o $(PROGRAM)

utils.o: utils.c
	$(CC) -c $(CFLAGS) utils.c

main.o: uwsgi.c
	$(CC) -c $(CFLAGS) -o main.o uwsgi.c
        
clean:
	rm -f utils.o main.o
